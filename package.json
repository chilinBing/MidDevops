{
  "name": "inventory-management-system",
  "version": "1.0.0",
  "description": "Cloud-deployed inventory management system with CRUD operations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:setup": "chmod +x scripts/docker-setup.sh && ./scripts/docker-setup.sh",
    "docker:up": "docker compose up --build -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build -d"
  },
  "keywords": ["inventory", "management", "cloud", "docker", "kubernetes"],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}